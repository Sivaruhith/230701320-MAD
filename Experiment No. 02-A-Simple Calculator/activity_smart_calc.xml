<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0F172A"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:text="0"
        android:textSize="42sp"
        android:textColor="#FFFFFF"
        android:gravity="end"
        android:padding="20dp"
        android:background="#020617"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <!-- Buttons -->
    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <!-- Row 1 -->
        <Button android:text="C" android:id="@+id/btnClear" style="@style/calcBtnOp"/>
        <Button android:text="âŒ«" android:id="@+id/btnBack" style="@style/calcBtnOp"/>
        <Button android:text="/" android:id="@+id/btnDiv" style="@style/calcBtnOp"/>
        <Button android:text="*" android:id="@+id/btnMul" style="@style/calcBtnOp"/>

        <!-- Row 2 -->
        <Button android:text="7" android:id="@+id/btn7" style="@style/calcBtn"/>
        <Button android:text="8" android:id="@+id/btn8" style="@style/calcBtn"/>
        <Button android:text="9" android:id="@+id/btn9" style="@style/calcBtn"/>
        <Button android:text="-" android:id="@+id/btnSub" style="@style/calcBtnOp"/>

        <!-- Row 3 -->
        <Button android:text="4" android:id="@+id/btn4" style="@style/calcBtn"/>
        <Button android:text="5" android:id="@+id/btn5" style="@style/calcBtn"/>
        <Button android:text="6" android:id="@+id/btn6" style="@style/calcBtn"/>
        <Button android:text="+" android:id="@+id/btnAdd" style="@style/calcBtnOp"/>

        <!-- Row 4 -->
        <Button android:text="1" android:id="@+id/btn1" style="@style/calcBtn"/>
        <Button android:text="2" android:id="@+id/btn2" style="@style/calcBtn"/>
        <Button android:text="3" android:id="@+id/btn3" style="@style/calcBtn"/>
        <Button android:text="=" android:id="@+id/btnEqual" style="@style/calcBtnEqual"/>

        <!-- Row 5 -->
        <Button android:text="0" android:id="@+id/btn0" style="@style/calcBtnWide"/>
        <Button android:text="." android:id="@+id/btnDot" style="@style/calcBtn"/>

    </GridLayout>

</LinearLayout>
